<div class="row">
  <div class="col-md-12 header">
    <h1>Report <span class="orange-text">it</span></h1>
  </div>
</div>
<div class="row row-centered">
  <div class="col-md-8 col-sm-12 col-centered section">
    <div class="section-header">
      <h2>Iniciar sesion</h2>
    </div>
    <div class="section-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field row row-centered">
          <%= f.label :username, :class => "col-md-6 col-sm-12 col-centered" %><br />
          <%= f.text_field :username, autofocus: true, :class => "col-md-6 col-sm-12 col-centered" %>
        </div>

        <div class="field">
          <%= f.label :password, :class => "col-md-6 col-sm-12 col-centered" %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "col-md-6 col-sm-12 col-centered" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Iniciar Sesion", :class => "col-md-4 col-sm-12 col-centered" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>