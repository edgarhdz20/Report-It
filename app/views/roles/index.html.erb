<div class="welcome-body">
  <div class="section">
    <div class="section-header">
      <h1>Lista de roles</h1>
    </div>
    <div class="section-content">
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= role.description %></td>
              <td>
                <%= link_to role, :class => "btn btn-info" do %>
                  <span class="fa fa-eye"></span>
                <% end %>
              </td>
              <td>
                <%= link_to edit_role_path(role), :class => "btn btn-warning" do %>
                  <span class="fa fa-pencil"></span>
                <% end %>
              </td>
              <td>
                <%= link_to role, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
                  <span class="fa fa-trash"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to new_role_path, :class => "btn btn-primary" do %>
        <span class="fa fa-plus"></span> Nuevo rol
      <% end %>
    </div>
  </div>
</div>
