<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field col-sm-6">
    <%= image_tag @user.avatar.url, :class => "edit_user_img" %>
  </div>
  <div class="field col-sm-6">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="field col-sm-12 col-md-6">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field col-sm-12 col-md-6">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field col-sm-12 col-md-6">
    <%= f.label :role_id %><br>
    <%= collection_select(:user, :role_id, Role.all, :id, :name, {prompt: true}) %>
  </div>
  <div class="field col-sm-12 col-md-6">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field col-sm-12 col-md-6">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field col-sm-12 col-md-6">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field col-sm-12 col-md-6">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, required: action_name == "new" %>
  </div>
  <br class="clear">
  <div class="actions row row-centered">
    <%= f.submit :class => "col-xs-12 col-md-3 col-centered" %>
  </div>
<% end %>