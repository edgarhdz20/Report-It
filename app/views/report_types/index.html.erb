<div class="welcome-body">
  <div class="section">
    <div class="section-header">
      <h1>Tipos de reporte</h1>
    </div>
    <div class="section-content">
      <table>
        <thead>
          <tr>
                  <th>Descripcion</th>
                  <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @report_types.each do |report_type| %>
            <tr>
                    <td><%= report_type.description %></td>
                    <td>
                <% if can? :show,report_type %>
                  <%= link_to report_type, :class => "btn btn-info", :title => "Ver" do %>
                    <span class="fa fa-eye"></span>
                  <% end %>
                <% end %>
              </td>
              <td>
                <% if can? :edit,report_type %>
                  <%= link_to edit_report_type_path(report_type), :class => "btn btn-warning", :title => "Editar" do %>
                    <span class="fa fa-pencil"></span>
                  <% end %>
                <% end %>
              </td>
              <td>
                <% if can? :delete,report_type %>
                  <%= link_to report_type, method: :delete, data: { confirm: 'Estas seguro?' }, :class => "btn btn-danger", :title => "Eliminar" do %>
                    <span class="fa fa-trash"></span>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <% if can? :new, ReportType  %>
        <%= link_to new_report_type_path, :class => "btn btn-primary" do %>
          <span class="fa fa-plus"></span> Nuevo tipo de reporte
        <% end %>
      <% end %>
    </div>
  </div>
</div>