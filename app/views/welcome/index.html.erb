<div class="welcome-body">
	<% @reports.each do |report| %>
	    <div class="section">
	    	<div class="section-header">
	    		<h3><%= report.id %> - <%= report.address %></h3>
	    	</div>
	    	<div class="section-content">
	    		<div class="row">
		    		<div class="col-md-12 description_report">
		    			<%= report.description %>
		    		</div>
	    		</div>
	    		<div class="row row-centered">
		    		<div class="col-md-4 col-centered">
		    			<%= image_tag report.avatar.url, :class => "image_report" %>
		    		</div>
		    		<div class="col-md-4 col-centered">
			    		<div id="map">
			    			<span id="lat" class="hidden"><%= report.pos_x %></span>
			    			<span id="lng" class="hidden"><%= report.pos_y %></span>
			    		</div>
		    		</div>
	    		</div>
	    	</div>
		</div>
	<% end %>    
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCHzb6cgjC95Y5VyEkZkSfzDbyK9elslNs&callback=initMap"
async defer></script>

<% content_for :javascript_includes do %>
    <%= javascript_include_tag "google_maps" %>
<% end %>